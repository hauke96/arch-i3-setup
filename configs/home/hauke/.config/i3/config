# define monitors
set $monitor_left "DisplayPort-1"
set $monitor_right "DVI-D-0"

# define workspaces
set $ws_messaging 1:IM
set $ws_spotify   2:S
set $ws_browser   3:B
set $ws_mail      4:M

# define other stuff
set $start_delay "sleep 1"

# map workspaces to monitors
workspace $ws_messaging output $monitor_left
workspace $ws_spotify output $monitor_right
workspace $ws_browser output $monitor_left
workspace $ws_mail output $monitor_right

# switch to workspace
bindsym $mod+1 workspace $ws_spotify; workspace $ws_messaging
bindsym $mod+2 workspace $ws_messaging; workspace $ws_spotify

bindsym $mod+3 workspace $ws_mail; workspace $ws_browser
bindsym $mod+4 workspace $ws_browser; workspace $ws_mail

bindsym $mod+5 focus output $monitor_right; workspace 6; focus output $monitor_left; workspace 5
bindsym $mod+6 focus output $monitor_left; workspace 5; focus output $monitor_right; workspace 6

bindsym $mod+7 focus output $monitor_right; workspace 8; focus output $monitor_left; workspace 7
bindsym $mod+8 focus output $monitor_left; workspace 7; focus output $monitor_right; workspace 8

bindsym $mod+9 focus output $monitor_right; workspace 10; focus output $monitor_left; workspace 9
bindsym $mod+0 focus output $monitor_left; workspace 9; focus output $monitor_right; workspace 10

# Change Workspace
#bindsym $alt+ctrl+Left focus output $monitor_left; workspace prev; workspace prev;
#bindsym $alt+ctrl+Right focus output $monitor_right; workspace next; workspace next; focus output $monitor_left;
bindsym $alt+ctrl+Left exec --no-startup-id "python ~/.config/i3/i3-helper.py --workspace prev"
bindsym $alt+ctrl+Right exec --no-startup-id "python ~/.config/i3/i3-helper.py --workspace next"

# move focused container to workspace
bindsym Ctrl+$alt+1 move container to workspace "$ws_messaging"
bindsym Ctrl+$alt+2 move container to workspace "$ws_spotify"
bindsym Ctrl+$alt+3 move container to workspace "$ws_browser"
bindsym Ctrl+$alt+4 move container to workspace "$ws_mail"
bindsym Ctrl+$alt+5 move container to workspace 5
bindsym Ctrl+$alt+6 move container to workspace 6
bindsym Ctrl+$alt+7 move container to workspace 7
bindsym Ctrl+$alt+8 move container to workspace 8
bindsym Ctrl+$alt+9 move container to workspace 9
bindsym Ctrl+$alt+0 move container to workspace 10

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

# Start these windows as floating windows:
for_window [class="gnome-calculator"] floating enable
for_window [class="Gnome-calculator"] floating enable
for_window [class="spectacle"] floating enable


